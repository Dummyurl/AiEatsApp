<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerFoodList">

    <LinearLayout
        android:id="@+id/logo_place"
        android:layout_below="@+id/new_userName"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:background="#c4c8c9"
            android:layout_margin="5dp" />
        <ImageView
            android:id="@+id/logo_register"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logo_transparent"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:background="#c4c8c9"
            android:layout_margin="5dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/foodView"
        android:layout_width="wrap_content"
        android:layout_height="393dp"
        android:layout_below="@+id/logo_place"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_below="@+id/foodView"
        android:id="@+id/btn_addFood"
        android:text="Add Food"
        android:background="#263238"
        android:layout_marginBottom="10dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@+id/btn_addFood"
        android:id="@+id/btn_back"
        android:text="Back"
        android:background="#263238"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>