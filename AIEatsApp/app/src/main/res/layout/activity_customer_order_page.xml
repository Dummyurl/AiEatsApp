<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customerOrderPage">

    <LinearLayout
        android:id="@+id/logo_place"
        android:layout_below="@+id/new_userName"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:background="#c4c8c9"
            android:layout_margin="5dp" />
        <ImageView
            android:id="@+id/logo_register"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logo_transparent"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:background="#c4c8c9"
            android:layout_margin="5dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/foodInformation"
        android:layout_below="@+id/logo_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/foodInfo_name"
            android:layout_alignParentStart="true"
            android:text="FoodName"
            android:textSize="24dp"
            android:layout_width="250dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/foodInfo_price"
            android:layout_toRightOf="@+id/foodInfo_name"
            android:layout_alignParentEnd="true"
            android:text="FoodPrice"
            android:textSize="24dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/foodInfo_desc"
            android:layout_below="@+id/foodInfo_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="FoodDesc"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/foodInfo_provider"
            android:layout_below="@+id/foodInfo_desc"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="FoodProvider"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <Button
        android:layout_below="@+id/foodInformation"
        android:id="@+id/btn_addOrder"
        android:text="Add Order"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#263238"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@+id/btn_addOrder"
        android:id="@+id/btn_backOrder"
        android:text="Back"
        android:layout_marginBottom="10dp"
        android:background="#263238"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>